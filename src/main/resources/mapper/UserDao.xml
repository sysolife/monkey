<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bulldog.monkey.dao.UserDao">
    <select id="queryUser" resultType="com.bulldog.monkey.entities.User">
		SELECT id, name,created_at,updated_at
		FROM users
		ORDER BY id
		DESC
	</select>
    <select id="queryUserById" resultType="com.bulldog.monkey.entities.User">
		SELECT id, name,
		created_at,updated_at
		FROM users
		WHERE
		id=#{userId}
	</select>
    <insert id="insertUser" useGeneratedKeys="true" keyProperty="userId"
            keyColumn="id" parameterType="com.bulldog.monkey.entities.User">
		INSERT INTO
		users(name,created_at,updated_at)
		VALUES
		(#{name},#{createdAt},#{updatedAt})
	</insert>
    <update id="updateUser" parameterType="com.bulldog.monkey.entities.User">
        update users
        <set>
            <if test="name != null">name=#{userName},</if>
        </set>
        where id=#{userId}
    </update>
</mapper>
